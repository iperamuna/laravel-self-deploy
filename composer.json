{
    "name": "iperamuna/laravel-self-deploy",
    "description": "Simple self-deployment scripts and commands for Laravel applications.",
    "license": "MIT",
    "authors": [
        {
            "name": "Indunil Peramuna",
            "email": "iperamuna@gmail.com",
            "homepage": "https://iperamuna.online"
        }
    ],
    "autoload": {
        "psr-4": {
            "Iperamuna\\SelfDeploy\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iperamuna\\SelfDeploy\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Iperamuna\\SelfDeploy\\SelfDeployServiceProvider"
            ]
        }
    },
    "require": {
        "illuminate/support": "^11.0|^12.0",
        "illuminate/console": "^11.0|^12.0",
        "laravel/prompts": "^0.1|^0.2|^0.3|^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "4.x-dev",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "vendor/bin/pest"
    }
}